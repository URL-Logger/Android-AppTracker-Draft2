<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                  android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
                  android:paddingRight="@dimen/activity_horizontal_margin"
                  android:paddingTop="@dimen/activity_vertical_margin"
                  android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".displaydata"
                  android:orientation="vertical"
                  android:background="@drawable/gradient_color">

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:onClick="logoutUser"
        android:text="@string/logout_button"
        tools:ignore="HardcodedText"
        android:background="@drawable/logout_button"
        android:layout_marginTop="25dp"
        android:src="@drawable/logout_logo"
        android:layout_gravity="right"
        />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="100dp"

        android:paddingTop="5dp"
        android:src="@drawable/utelem_two" />

    <ToggleButton
        android:textOn="On"
        android:textOff="Off"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:id="@+id/stats_btn"
        android:background="@drawable/activity_button"/>

